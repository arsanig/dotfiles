POWERLEVEL9K_MODE="nerdfont-complete"

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(user dir)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(vcs time date)

POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_PROMPT_ADD_NEWLINE=true
POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX="%f"
local user_symbol="$"
if [[ $(print -P "%#") =~ "#" ]]; then
    user_symbol = "#"
fi
POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="%B%F{046}$%f%b "

POWERLEVEL9K_LEFT_SEGMENT_SEPARATOR=$'\uE0B4 '
POWERLEVEL9K_RIGHT_SEGMENT_SEPARATOR=$' \uE0B6'

POWERLEVEL9K_DATE_FORMAT="%D{%Y/%m/%d}"
POWERLEVEL9K_DATE_ICON=$'\uF133 '
POWERLEVEL9K_DATE_BACKGROUND="254"
POWERLEVEL9K_DATE_FOREGROUND="black"

POWERLEVEL9K_TIME_ICON=$'\uEB7C'
POWERLEVEL9K_TIME_BACKGROUND="245"
POWERLEVEL9K_TIME_FOREGROUND="black"

POWERLEVEL9K_USER_ICON=$'\uF007 '
POWERLEVEL9K_USER_DEFAULT_BACKGROUND="210"
POWERLEVEL9K_USER_DEFAULT_FOREGROUND="black"

POWERLEVEL9K_HOME_ICON=$'\uF015 '
POWERLEVEL9K_HOME_SUB_ICON=$'\uF07b '
POWERLEVEL9K_DIR_HOME_BACKGROUND="clear"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND="clear"
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND="clear"
POWERLEVEL9K_DIR_ETC_BACKGROUND="clear"
POWERLEVEL9K_DIR_NOT_WRITABLE_BACKGROUND="clear"
POWERLEVEL9K_DIR_HOME_FOREGROUND="045"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND="045"
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND="045"
POWERLEVEL9K_DIR_ETC_FOREGROUND="045"
POWERLEVEL9K_DIR_NOT_WRITABLE_FOREGROUND="045"

POWERLEVEL9K_SHOW_CHANGESET=true
POWERLEVEL9K_CHANGESET_HASH_LENGTH=7
POWERLEVEL9K_VCS_GIT_GITHUB_ICON=$' \uF113'
POWERLEVEL9K_VCS_CLEAN_BACKGROUND="235"
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND="235"
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND="235"
POWERLEVEL9K_VCS_CLEAN_FOREGROUND="048"
POWERLEVEL9K_VCS_UNTRACKED_FOREGROUND="red"
POWERLEVEL9K_VCS_MODIFIED_FOREGROUND="darkorange"

POWERLEVEL9K_OS_ICON_BACKGROUND="015"
POWERLEVEL9K_OS_ICON_FOREGROUND="black"